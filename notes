docker network create cli_chat -d bridge

-> server
docker build -f dockerfiles/server.Dockerfile -t server:dev .
docker run -it -v ./server:/app/ -v ./shared:/app/shared/ --network cli_chat --name server server:dev

-> client
docker build -f dockerfiles/client.Dockerfile -t client:dev .
docker run -it -v ./client:/app/ -v ./shared:/app/shared/ --network cli_chat --name client client:dev

mkdir bubbleTea_client
